server {
    listen $PORT;
    location / { root /usr/share/nginx/html; index index.html; try_files $uri $uri/ /index.html; }
    location ~ ^/(customers|items|cards|update_card|...) { proxy_pass $API_URL; proxy_set_header Host $host; proxy_set_header X-Real-IP $remote_addr; proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; }
}